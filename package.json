{
  "type": "module",
  "name": "zustand-indexeddb",
  "version": "0.1.0",
  "description": "Persist Zustand stores in IndexedDB.",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./build/index.d.ts",
      "default": "./build/index.ts"
    }
  },
  "scripts": {
    "lint": "publint",
    "test": "vitest",
    "build": "tsdown",
    "browsers": "pnpm exec playwright install chromium --with-deps",
    "release": "release publish"
  },
  "files": [
    "./build",
    "./src",
    "./tests"
  ],
  "keywords": [
    "zustand",
    "indexeddb",
    "db",
    "persist",
    "serializable"
  ],
  "author": "Artem Zakharchenko <kettanaito@gmail.com>",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/zustandjs/zustand-indexeddb"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@ossjs/release": "^0.10.1",
    "@vitest/browser-playwright": "^4.0.14",
    "playwright": "^1.57.0",
    "publint": "^0.3.15",
    "tsdown": "^0.16.8",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14",
    "zustand": "^5.0.8"
  }
}